+                    continue;
+                }
+                // Paper end
                 BlockPos blockposition = entity.blockPosition();
                 long j = ChunkPos.asLong(SectionPos.blockToSectionCoord(blockposition.getX()), SectionPos.blockToSectionCoord(blockposition.getZ()));
 
